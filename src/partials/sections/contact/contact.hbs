<section class="section-contact">
  <form id="contact-form" class="contact-form">
    <fieldset class="fieldset contact-name-email-wrapper fieldset--row">
      <fieldset class="fieldset contact-name fieldset--column">
        <label class="label" for="name">
          Name
        </label>
        <input class="input" id="name" type="text" />
      </fieldset>
      <fieldset class="fieldset contact-email fieldset--column">
        <label class="label" for="email">
          Email
        </label>
        <input class="input" id="email" type="email" />
      </fieldset>
    </fieldset>
    <fieldset class="fieldset fieldset--column">
      <label class="label" for="text">
        Your message
      </label>
      <textarea class="input contact-text" id="text">
      </textarea>
    </fieldset>
    <button type="submit" class="button button--primary button--large">
      Send message
    </button>
  </form>
</section>